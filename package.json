{
  "name": "beehive-backend-test",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run src/main.ts",
    "prepare": "husky",
    "pre-commit": "bunx lint-staged",
    "format": "biome format --write",
    "lint": "biome lint --write",
    "db:generate": "prisma generate",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --dir src/tests/unit",
    "test:integration": "vitest run --dir src/tests/integration",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "latest",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/supertest": "^6.0.3",
    "dotenv": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "supertest": "^7.1.1",
    "vitest": "^3.1.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@prisma/client": "^6.8.2",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "pino-pretty": "^13.0.0",
    "prisma": "^6.8.2",
    "zod": "^3.24.4"
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx,json}": [
      "biome check --write .",
      "biome format --write ."
    ]
  }
}
